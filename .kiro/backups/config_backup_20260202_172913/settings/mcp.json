{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ],
      "env": {
        "FILESYSTEM_MAX_FILE_SIZE": "10MB",
        "FILESYSTEM_ALLOWED_EXTENSIONS": ".py,.js,.ts,.md,.json,.yaml,.yml,.txt"
      },
      "disabled": false,
      "autoApprove": [
        "read_text_file",
        "list_directory",
        "search_files",
        "get_file_info",
        "directory_tree"
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_MAX_ENTITIES": "10000",
        "MEMORY_PERSISTENCE": "true"
      },
      "disabled": false,
      "autoApprove": [
        "create_entities",
        "search_nodes",
        "read_graph",
        "open_nodes",
        "add_observations",
        "create_relations"
      ]
    }
  }
}